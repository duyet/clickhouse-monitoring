# ===========================================
# Analytics & Monitoring
# ===========================================
# Google Analytics (optional)
NEXT_PUBLIC_MEASUREMENT_ID=

# Seline Analytics (optional)
NEXT_PUBLIC_SELINE_ENABLED=true

# Vercel Analytics (optional)
NEXT_PUBLIC_VERCEL_ANALYTICS_ENABLED=true

# Self-hosted Analytics (built-in)
# Enable/disable the built-in analytics system
NEXT_PUBLIC_ANALYTICS_ENABLED=true
# Anonymize IP addresses before storing
NEXT_PUBLIC_ANALYTICS_ANONYMIZE_IP=false
# Track performance metrics (Core Web Vitals)
NEXT_PUBLIC_ANALYTICS_TRACK_PERFORMANCE=true
# Track JavaScript errors
NEXT_PUBLIC_ANALYTICS_TRACK_ERRORS=true
# Track page views
NEXT_PUBLIC_ANALYTICS_TRACK_PAGEVIEWS=true
# Custom events table name (default: system.monitoring_events)
EVENTS_TABLE_NAME=system.monitoring_events

# ===========================================
# Application Settings
# ===========================================
NEXT_PUBLIC_TITLE=ClickHouse Monitoring
NEXT_PUBLIC_TITLE_SHORT=ClickHouse

# ===========================================
# ClickHouse Connection
# ===========================================
CLICKHOUSE_HOST=http://localhost:8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_NAME=
CLICKHOUSE_TZ=
CLICKHOUSE_MAX_EXECUTION_TIME=60

# ===========================================
# Caching & Performance
# ===========================================
NEXT_QUERY_CACHE_TTL=86400
CLICKHOUSE_EXCLUDE_USER_DEFAULT=

# ===========================================
# Logging
# ===========================================
# Enable verbose debug logging in any environment
# Set to 'true' to enable debug output in production
DEBUG=false