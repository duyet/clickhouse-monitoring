# ===========================================
# Authentication
# ===========================================
BETTER_AUTH_URL=http://localhost:3000
BETTER_AUTH_SECRET=your-secret-key-min-32-chars-here

# ===========================================
# Encryption
# ===========================================
ENCRYPTION_KEY=your-encryption-key-min-32-chars-here

# ===========================================
# Database
# ===========================================
DATABASE_URL=file:./data/app.db
DB_DIALECT=sqlite

# ===========================================
# ClickHouse Connection
# ===========================================
CLICKHOUSE_HOST=localhost
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_NAME=
CLICKHOUSE_TZ=
CLICKHOUSE_MAX_EXECUTION_TIME=60

# ===========================================
# OAuth Providers (Optional)
# ===========================================
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ===========================================
# Analytics & Monitoring
# ===========================================
NEXT_PUBLIC_VERCEL_ANALYTICS_ENABLED=false
NEXT_PUBLIC_MEASUREMENT_ID=
NEXT_PUBLIC_SELINE_ENABLED=false

# ===========================================
# Caching & Performance
# ===========================================
NEXT_QUERY_CACHE_TTL=86400
CLICKHOUSE_EXCLUDE_USER_DEFAULT=

# ===========================================
# Logging
# ===========================================
# Enable verbose debug logging in any environment
# Set to 'true' to enable debug output in production
DEBUG=false