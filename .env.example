# ===========================================
# Analytics & Monitoring
# ===========================================
NEXT_PUBLIC_MEASUREMENT_ID=
NEXT_PUBLIC_SELINE_ENABLED=true
NEXT_PUBLIC_VERCEL_ANALYTICS_ENABLED=true

# ===========================================
# Application Settings
# ===========================================
NEXT_PUBLIC_TITLE=ClickHouse Monitoring
NEXT_PUBLIC_TITLE_SHORT=ClickHouse

# ===========================================
# ClickHouse Connection
# ===========================================
CLICKHOUSE_HOST=http://localhost:8123
CLICKHOUSE_USER=default
CLICKHOUSE_PASSWORD=
CLICKHOUSE_NAME=
CLICKHOUSE_TZ=
CLICKHOUSE_MAX_EXECUTION_TIME=60

# ===========================================
# Caching & Performance
# ===========================================
NEXT_QUERY_CACHE_TTL=86400
CLICKHOUSE_EXCLUDE_USER_DEFAULT=

# ===========================================
# Logging
# ===========================================
# Enable verbose debug logging in any environment
# Set to 'true' to enable debug output in production
DEBUG=false

# ===========================================
# Deployment & Multi-Tenancy
# ===========================================
# Deployment mode: 'self-hosted' (default) or 'cloud'
# - self-hosted: Single-tenant, optional auth, env hosts visible to all
# - cloud: Multi-tenant, required auth, env hosts only for guests
DEPLOYMENT_MODE=self-hosted

# Who can see environment-configured hosts?
# - all: Everyone (default)
# - guest: Only unauthenticated users
# - none: Only authenticated users (must add their own)
ENV_HOSTS_VISIBILITY=all

# ===========================================
# Database & Authentication
# ===========================================
# Database URL for authentication and multi-tenant data
# SQLite (default): file:./data/auth.db
# Postgres: postgres://user:pass@localhost:5432/clickhouse_monitor
# Cloudflare D1: Automatically bound via AUTH_DB binding
# Leave empty to disable authentication
DATABASE_URL=

# Secret key for session encryption (required if DATABASE_URL is set)
# Generate with: openssl rand -base64 32
AUTH_SECRET=

# Run database migrations on startup (default: true)
AUTO_MIGRATE=true

# ===========================================
# OAuth Providers
# ===========================================
# GitHub OAuth
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=

# Google OAuth
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# GitHub Enterprise OAuth (optional)
GITHUB_ENTERPRISE_CLIENT_ID=
GITHUB_ENTERPRISE_CLIENT_SECRET=
GITHUB_ENTERPRISE_URL=